<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="QuickSettingsLabel">
        <item name="android:textSize">@dimen/material_text_button</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">@dimen/quick_settings_label_width</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="QuickSettingsButton" parent="@style/QuickSettingsLabel">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/padding_quarter</item>
        <item name="android:layout_marginBottom">@dimen/padding_quarter</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/padding_half</item>
        <item name="android:layout_marginStart">@dimen/padding_quarter</item>
        <item name="android:layout_marginEnd">@dimen/padding_quarter</item>
    </style>

</resources>
